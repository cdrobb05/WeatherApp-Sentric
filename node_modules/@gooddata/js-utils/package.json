{
  "name": "@gooddata/js-utils",
  "version": "3.10.17",
  "description": "Various utils shared on GoodData frontend",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gooddata/gdc-js-utils.git"
  },
  "author": "Vojtech Jasny <vojtech.jasny@gooddata.com>",
  "bugs": {
    "url": "https://github.com/gooddata/gdc-js-utils/issues"
  },
  "homepage": "https://github.com/gooddata/gdc-js-utils",
  "main": "./dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "config": {
    "tslint": "./src/**/*.ts"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn build",
    "test": "jest --watch",
    "run-tslint": "tslint -p tsconfig.json",
    "tslint": "yarn run-tslint -t verbose $npm_package_config_tslint",
    "tslint-ci": "mkdir -p ./ci/results && yarn run-tslint -t checkstyle -o ./ci/results/tslint-results.xml $npm_package_config_tslint",
    "validate": "tsc --noEmit && yarn tslint",
    "validate-ci": "tsc --noEmit && yarn tslint-ci"
  },
  "devDependencies": {
    "@gooddata/frontend-npm-scripts": "1.0.1",
    "@gooddata/tslint-config": "^1.0.0",
    "@types/jest": "22.2.3",
    "@types/js-cookie": "2.1.0",
    "@types/lodash": "^4.14.138",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-junit": "3.0.0",
    "lint-staged": "^9.2.5",
    "ts-jest": "^24.0.1",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "@gooddata/typings": "^2.26.1",
    "js-cookie": "^2.1.4",
    "lodash": "^4.17.15"
  },
  "license": "BSD-3-Clause",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,tsx,jsx,scss}": [
      "npx gdc-fix-copyright",
      "git add"
    ]
  }
}
